<div class="col-md-7">
<h2><%= @location.name %></h2>
  <h4><%= @location.description %></h4>
<ul>
  <% @location.items.each do |item| %>
    <% unless current_user.items.include?(item) %>
      <li><%= item.name %>: <%= item.description %></li>
        <%= link_to 'Add to inventory', {:action => :update, :item => item}, :method => :patch %>
      <% end %>
  <% end %>
</ul>
</div>

<div class="col-md-4 col-md-offset-1 jumbotron">
  <h2><%= image_tag(current_user.avatar.url(:thumb)) %> <%= current_user.user_name %></h2>
  <p>Current Inventory:</p>
  <ul><% current_user.items.each do |item| %>
    <li><%= item.name %>: <%= item.description %></li>
    <% end %>
  </ul>
</div>
