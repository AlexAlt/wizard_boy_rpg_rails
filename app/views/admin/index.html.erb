<% if @areas.any? %>
  <h2>Click on an area to add a new location to it:</h2>
  <% @areas.each do |area| %>
    <li><%= link_to area.name, new_area_location_path(area) %></li>
      <ul>
        <% area.locations.each do |location| %>
          <li><%= location.name %>: <%= location.description %></li>
        <% end %>
      </ul>
  <%end %>
<% end %>
<br>
<h4>Or, <%= link_to "Add a new area", new_area_path %></h4>

<hr>
<% if @locations.any? %>
  <h2>Click on a location to add a new item to it:</h2>
  <% @locations.each do |location| %>
    <li><%= link_to location.name, new_location_item_path(location) %></li>
      <ul>
        <% location.items.each do |item| %>
          <li><%= item.name %>: <%= item.description %></li>
        <% end %>
      </ul>
  <%end %>
<% end %>
